<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a24book">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/splash_image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/splash_image"
        android:supportsRtl="true"
        android:theme="@style/Theme.24BOOK">

        <activity android:name=".MainActivity" android:theme="@style/FullScreen"/>

        <activity
            android:name=".StateSplashActivity"
            android:theme="@style/FullScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>